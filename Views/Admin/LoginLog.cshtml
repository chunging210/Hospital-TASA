<div class="page-content" v-cloak>
    <div class="container-fluid vstack gap-3">
        <div class="card">
            <div class="card-header mx-4 mt-3">
                <div class="row d-flex align-items-center">
                    <div class="col-xl-auto col-sm-12 text-branding d-flex align-items-center">
                        <span class="material-icons">history</span>登入日誌
                    </div>

                    <div class="col-12 col-lg-4">
                        <div class="search-box">
                            <div class="position-relative">
                                <input type="text" class="form-control" v-model="loginlog.query.keyword"
                                       placeholder="搜尋關鍵字...">
                                <span class="material-icons search-icon">search</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="input-group">
                            <input v-model="loginlog.query.startDate" type="date" class="form-control"
                                   placeholder="開始日期">
                            <span class="input-group-text">-</span>
                            <input v-model="loginlog.query.endDate" type="date" class="form-control" placeholder="結束日期">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs">
                    <li v-for="item in loginlog.tabs" class="nav-item">
                        <div @@click="loginlog.selectTab(item.value)"
                        v-bind:class="['nav-link',{'active': loginlog.selectedTab.value == item.value}]"
                        role="button">{{item.text}}</div>
                    </li>
                </ul>

                <!-- ✅ 可選:加入 Loading 提示 -->
                <div v-if="loginlog.loading.value" class="text-center py-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">載入中...</span>
                    </div>
                </div>

                <!-- ✅ 修改帳號日誌 - 簡化版表格 -->
                <table v-if="loginlog.selectedTab.value === 'user_update'" class="table table-hover">
                    <caption>修改帳號日誌列表</caption>
                    <thead>
                        <tr class="table-light">
                            <th style="width: 180px;">修改時間</th>
                            <th>操作描述</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(item, index) in loginlog.list" :key="index">
                            <td>{{ item?.LoginTime ? new Date(item.LoginTime).toLocaleString('zh-TW') : '' }}</td>
                            <td>{{ item?.ActionDescription || '-' }}</td>
                        </tr>
                        <tr v-if="loginlog.list.length === 0">
                            <td colspan="2" class="text-center">查無資料</td>
                        </tr>
                    </tbody>
                </table>

                <!-- ✅ 登入日誌 / 新增帳號日誌 - 完整表格 -->
                <table v-else class="table table-hover">
                    <caption>日誌列表</caption>
                    <thead>
                        <tr class="table-light">
                            <th>{{ loginlog.selectedTab.value === 'user_register_' ? '註冊時間' : '登入時間' }}</th>
                            <th>使用者</th>
                            <th>狀態</th>
                            <th>IP 位址</th>
                            <th>裝置 / 瀏覽器</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(item, index) in loginlog.list" :key="index">
                            <td>{{ item?.LoginTime ? new Date(item.LoginTime).toLocaleString('zh-TW') : '' }}</td>
                            <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"
                                :title="item?.UserName">
                                {{ item?.UserName }}
                            </td>
                            <td>
                                <span v-if="item?.IsSuccess" class="badge bg-success">
                                    <span class="material-icons font-size-12">check_circle</span>
                                    成功
                                </span>
                                <span v-else class="badge bg-danger">
                                    <span class="material-icons font-size-12">cancel</span>
                                    失敗 {{ item?.FailureReason ? '(' + item.FailureReason + ')' : '' }}
                                </span>
                            </td>
                            <td>{{ item?.IpAddress || '-' }}</td>
                            <td>{{ item?.DeviceInfo || '-' }} / {{ item?.BrowserInfo || '-' }}</td>
                        </tr>
                        <tr v-if="loginlog.list.length === 0">
                            <td colspan="5" class="text-center text-muted">查無資料</td>
                        </tr>
                    </tbody>
                </table>

                <!-- ✅ Page 元件 - 使用標準寫法 -->

                <page ref="loginlogpage" :per-page="10" :per-page-option="[10,20,30]" @@reload="loginlog.getList">
                </page>
            </div>
        </div>
    </div>
</div>