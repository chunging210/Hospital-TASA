@{
    ViewData["Title"] = "會議室管理";
}

<div id="app" class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header mx-4 mt-3">
                        <div class="row align-items-center">
                            <div class="col-xl-auto col-sm-12 text-branding align-middle">
                                <i class="mdi mdi-home-city"></i> 會議室管理
                            </div>
                            <div class="col-xl-6 col-sm-12 df-box05 me-4">
                                <div class="search-box">
                                    <div class="position-relative">
                                        <input v-model="room.query.keyword" @@keyup.enter="room.getList" type="text"
                                            class="form-control border-1" placeholder="搜尋會議室名稱...">
                                        <i class="search-icon mdi mdi-magnify" @@click="room.getList"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-sm-12 df-box01">
                                <button type="button" class="btn btn-lg btn-outline-primary btn-rounded"
                                    @@click="room.getVM()" style="font-size: 14px;">
                                    <i class="mdi mdi-plus"></i> 新增會議室
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row g-4">
                            <div v-for="item in room.list" :key="item.Id" class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
                                <div class="card h-100">
                                    <div class="card-header bg-primary text-white text-center py-3">
                                        <h5 class="mb-2">{{item.Name}}</h5>
                                        <small>{{item.Building}} {{item.Floor}}樓 | {{item.Number}}</small>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3"
                                            style="height: 180px; background: #f8f9fa; border-radius: 6px; background-size: cover; background-position: center;"
                                            :style="item.Image ? {backgroundImage: `url('${item.Image}')`} : {}">
                                        </div>

                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="fw-bold">容量</span>
                                                <span>{{item.Capacity}} 人</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="fw-bold">面積</span>
                                                <span>{{item.Area}} ㎡</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span class="fw-bold">狀態</span>
                                                <span class="badge"
                                                    :class="item.Status === 'available' ? 'bg-info' : item.Status === 'occupied' ? 'bg-danger' : 'bg-warning'">
                                                    {{item.Status === 'maintenance' ? '維修中' : item.Status === 'occupied'
                                                    ? '使用中' : '可預約'}}
                                                </span>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold">建立日期</span>
                                                <span>{{new Date(item.CreateAt).toLocaleDateString('zh-TW')}}</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-white">
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-primary btn-sm" @@click="room.getVM(item.Id)">
                                                <i class="mdi mdi-pencil"></i> 編輯
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div v-if="room.list.length === 0" class="col-12">
                                <div class="alert alert-info text-center">查無資料</div>
                            </div>
                        </div>
                    </div>

                    <div class="row align-items-center px-4 py-3 border-top">
                        <div class="col-auto">
                            <span class="text-muted">共 {{room.total}} 筆</span>
                        </div>
                        <div class="col-auto ms-auto">
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    <li class="page-item" :class="{disabled: room.query.pageIndex <= 1}">
                                        <a class="page-link" href="javascript:void(0);" @@click="room.previousPage">
                                            <i class="mdi mdi-chevron-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item active">
                                        <span class="page-link">第 {{room.query.pageIndex}} 頁</span>
                                    </li>
                                    <li class="page-item" :class="{disabled: !room.hasNextPage}">
                                        <a class="page-link" href="javascript:void(0);" @@click="room.nextPage">
                                            <i class="mdi mdi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_SysRoomEdit" />

<script src="~/js/SysRoom.cshtml.js"></script>
<script>
    const app = Vue.createApp(window.$config.setup());
    app.mount('#app');

    document.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
            room.getList();
        }, 200);
    });
</script>