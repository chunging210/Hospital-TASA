<!-- 新增/編輯訪客 Modal -->
<div ref="visitormodal" class="modal fade" tabindex="-1" aria-labelledby="visitorModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="visitorModalLabel">
                    {{ visitor.vm.Id ? '編輯訪客' : '新增訪客' }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body px-4 mt-3">
                <form @@submit.prevent="visitor.save()">
                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">中文名 <span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.CName" type="text" class="form-control" placeholder="中文名"
                                required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">英文名 <span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.EName" type="text" class="form-control" placeholder="英文名" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">公司名稱 <span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.CompanyName" type="text" class="form-control" placeholder="公司名稱"
                                required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">職稱</label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.JobTitle" type="text" class="form-control" placeholder="職稱" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">電話 <span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.Phone" type="tel" class="form-control" placeholder="電話"
                                required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">信箱</label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.Email" type="email" class="form-control" required />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">車牌號碼</label>
                        <div class="col-sm-9">
                            <input v-model="visitor.vm.LicensePlate" type="text" class="form-control"
                                placeholder="車牌號碼" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-3 col-form-label">車種</label>
                        <div class="col-sm-9">
                            <select v-model="visitor.vm.CarType" class="form-select">
                                <option value="">請選擇</option>
                                <option value="motorcycle">機車</option>
                                <option value="car">汽車</option>
                                <option value="truck_bus">貨車/大客車</option>
                                <option value="other">其他車種</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" @@click="visitor.save()" class="btn btn-primary">
                    {{ visitor.vm.Id ? '確認更新' : '確認新增' }}
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    取消
                </button>
            </div>
        </div>
    </div>
</div>