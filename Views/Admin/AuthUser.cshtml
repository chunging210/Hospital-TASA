<div v-cloak>
<div class="page-content">
    <div class="container-fluid vstack gap-3">
        <div class="card">
            <div class="card-header">
                <div class="row d-flex align-items-center">
                    <div class="col-xl-auto col-sm-12 text-branding d-flex align-items-center">
                        <span class="material-icons">people</span>使用者總覽
                    </div>

                    <div class="col-12 col-lg-4">
                        <div class="search-box">
                            <div class="position-relative">
                                <input type="text" class="form-control" v-model="authuser.query.keyword"
                                       placeholder="搜尋關鍵字...">
                                <span class="material-icons search-icon">search</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-auto d-flex align-items-center ms-auto">
                        <button @@click="authuser.getVM()" class="btn btn-primary d-flex align-items-center">
                            <span class="material-icons me-2">add</span> 新增使用者
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs">
                    <li v-for="item in tabs.list" class="nav-item">
                        <div @@click="tabs.click(item.value)"
                            v-bind:class="['nav-link',{'active':tabs.select.value==item.value}]" role="button">
                            {{item.text}}</div>
                    </li>
                </ul>
                <table class="table table-hover table-responsive">
                    <caption>使用者列表</caption>
                    <thead>
                        <tr class="table-light">
                            <th>單位</th>
                            <th>姓名</th>
                            <th>帳號</th>
                            <th>Email</th>
                            <th>狀態</th>
                            <th>建立日期</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="item in tabData" @@dblclick="authuser.getVM(item.Id)" :key="item.Id">
                            <td>{{item.DepartmentName}}</td>
                            <td>{{item.Name}}</td>
                            <td>{{item.Account}}</td>
                            <td>{{item.Email}}</td>
                            <td>
                                <span v-if="item.IsEnabled" class="badge bg-success">啟用</span>
                                <span v-else-if="!item.IsApproved" class="badge bg-warning text-dark">待審核</span>
                                <span v-else class="badge bg-danger">停用</span>
                            </td>
                            <td>{{item.CreateAt.format()}}</td>
                            <td>
                                <button @@click="authuser.getVM(item.Id)" class="btn btn-sm btn-secondary">編輯</button>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot v-if="tabData.length==0">
                        <tr>
                            <td colspan="5" class="text-center">查無資料</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<offcanvas ref="authuseroffcanvas">
    <template #header>
        <div class="col-xl-auto col-sm-12 text-branding d-flex align-items-center">
            <span class="material-icons">folder</span>使用者管理
        </div>
    </template>
    <template #footer>
        <button @@click="authuser.save()" class="btn btn-branding text-white">
            確認修改
        </button>
    </template>
    <ol class="activity-checkout mb-0 px-4 mt-3">
        <li class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">edit</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">姓名</label>
                    </div>
                    <div class="col-12">
                        <input v-model="authuser.vm.Name" type="text" class="form-control" placeholder="姓名" />
                    </div>
                </div>
            </div>
        </li>
        <li v-if="!authuser.vm.Id" class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">account_circle</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">帳號</label>
                    </div>
                    <div class="col-12">
                        <input v-model="authuser.vm.Account" type="text" class="form-control" placeholder="帳號" />
                    </div>
                </div>
            </div>
        </li>
        <li class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">alternate_email</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">Email</label>
                    </div>
                    <div class="col-12">
                        <input v-model="authuser.vm.Email" type="email" class="form-control" placeholder="Email" />
                    </div>
                </div>
            </div>
        </li>
        <li class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">groups</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">單位</label>
                    </div>
                    <div class="col-12">
                        <ul class="list-group">
                            <li class="form-check form-check-inline ps-0">
                                <label class="form-check-label">
                                    <input v-model="authuser.vm.DepartmentId" class="form-radio-primary" type="radio"
                                        :value="null" />
                                    無
                                </label>
                            </li>
                            <li v-for="{Id,Name,Children} in department.tree" class="form-check form-check-inline ps-0">
                                <label class="form-check-label">
                                    <input v-model="authuser.vm.DepartmentId" class="form-radio-primary" type="radio"
                                        :value="Id" />
                                    {{Name}}
                                </label>
                                <ul class="list-group">
                                    <li v-for="{Id,Name} in Children" class="form-check form-check-inline">
                                        <label class="form-check-label">
                                            <input v-model="authuser.vm.DepartmentId" class="form-radio-primary"
                                                type="radio" :value="Id" />
                                            {{Name}}
                                        </label>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </li>
        <li class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">check_box</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">角色</label>
                    </div>
                    <div class="col-12">
                        <label v-for="item in role.list" class="form-check">
                            <input v-model="authuser.vm.Role" class="form-check-input" type="checkbox" :value="item.Id">
                            {{item.Name}}
                        </label>
                    </div>
                </div>
            </div>
        </li>
        <li class="checkout-item">
            <div class="avatar checkout-icon p-1">
                <div class="avatar-title rounded-circle bg-primary">
                    <span class="material-icons font-size-20">check</span>
                </div>
            </div>
            <div class="feed-item-list">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-xl-auto pe-0">
                        <label class="col-form-label pe-3">啟用</label>
                    </div>
                    <div class="col-12">
                        <label class="form-check">
                            <input v-model="authuser.vm.IsEnabled" class="form-check-input" type="checkbox"
                                :value="true">
                        </label>
                    </div>
                </div>
            </div>
        </li>
    </ol>
</offcanvas>
</div>