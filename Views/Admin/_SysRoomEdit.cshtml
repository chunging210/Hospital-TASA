<!-- Views/Admin/_SysRoomEdit.cshtml -->
<div class="modal fade" id="roomEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            @* <div style="background: #fff3cd; padding: 15px; margin: 10px;">
                <strong>🔍 編輯 Modal 調試：</strong>
                <div><code>room.vm.Id: {{ room.vm.Id }}</code></div>
                <div><code>room.vm.Name: {{ room.vm.Name }}</code></div>
                <div><code>room.vm.Images: {{ room.vm.Images }}</code></div>
                <div><code>room.vm.Images?.length: {{ room.vm.Images?.length }}</code></div>
                <div><code>room.vm.PricingType: {{ room.vm.PricingType }}</code></div>
                <div><code>room.vm.PricingDetails: {{ room.vm.PricingDetails }}</code></div>
            </div> *@


            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <span class="material-icons">edit</span>編輯會議室
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body vstack gap-3">


                <!-- 基本資訊 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">基本資訊</h6>

                    <div class="mb-3">
                        <label class="form-label">會議室名稱 <span class="text-danger">*</span></label>
                        <input v-model="room.vm.Name" type="text" class="form-control form-control-sm">
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">大樓名稱 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Building" type="text" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">樓層 <span class="text-danger">*</span></label>
                            <select v-model="room.vm.Floor" class="form-select form-select-sm">
                                <option value="B2">B2 地下二樓</option>
                                <option value="B1">B1 地下一樓</option>
                                <option value="1">1樓</option>
                                <option value="2">2樓</option>
                                <option value="3">3樓</option>
                                <option value="4">4樓</option>
                                <option value="5">5樓</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-2 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">房間編號 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Number" type="text" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">使用狀態</label>
                            <select v-model="room.vm.Status" class="form-select form-select-sm">
                                <option value="available">可預約</option>
                                <option value="occupied">使用中</option>
                                <option value="maintenance">維修中</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 mt-2">
                        <label class="form-label">會議室說明</label>
                        <textarea v-model="room.vm.Description" class="form-control form-control-sm"
                            rows="3"></textarea>
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">容量（人） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Capacity" type="number" class="form-control form-control-sm"
                                min="1">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">面積（㎡） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Area" type="number" class="form-control form-control-sm"
                                min="1" step="0.01">
                        </div>
                    </div>
                </div>

                <!-- 收費設定 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">收費設定</h6>


                    <!-- 啟用狀態 -->
                    <div class="form-check form-switch">
                        <input v-model="room.vm.IsEnabled" type="checkbox" class="form-check-input" id="editIsEnabled">
                        <label class="form-check-label" for="editIsEnabled">退費機制</label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">收費方式 <span class="text-danger">*</span></label>

                        <div class="form-check form-check-inline">
                            <input v-model="room.vm.PricingType" type="radio" value="hourly"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editHourly">小時制</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input v-model="room.vm.PricingType" type="radio" value="period"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editPeriod">時段制</label>
                        </div>
                    </div>

                    <div v-if="room.vm.PricingType === 'hourly'" class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span style="font-size: 13px; font-weight: 500;">設定每個時段的收費</span>
                            <div>
                                <button type="button" class="btn btn-outline-success btn-sm"
                                    @@click="room.selectAllHours">
                                    全選
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm ms-2"
                                    @@click="room.deselectAllHours">
                                    全不選
                                </button>
                            </div>
                        </div>


                        <div
                            style="max-height: 250px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 5px; padding: 10px;">
                            @* 【重點】使用 room.hourlySlots *@
                            <div>

                                <div v-for="slot in room.hourlySlots.value" :key="slot.Hour" class="mb-2">
                                    <div class="d-flex align-items-center gap-2">

                                        <!-- 複選框 -->
                                        <input v-model="slot.Checked" type="checkbox" class="form-check-input"
                                            style="margin: 0; cursor: pointer;">

                                        <!-- 時段標籤 -->
                                        <label style="flex: 1; margin: 0; font-size: 12px; cursor: pointer;">
                                            {{ String(slot.Hour).padStart(2, '0') }}:00 -
                                            {{ String(slot.Hour + 1).padStart(2, '0') }}:00
                                        </label>

                                        <!-- 價格輸入框 -->
                                        <div class="input-group input-group-sm" style="width: 120px;">
                                            <span class="input-group-text">$</span>
                                            <input v-model.number="slot.Fee" type="number"
                                                class="form-control form-control-sm" min="0" :disabled="!slot.Checked"
                                                placeholder="500">
                                            <span class="input-group-text">元</span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* 時段制 *@
                    <div v-if="room.vm.PricingType === 'period'">
                        <div class="d-flex justify-content-between mb-2"> <span>設定各個時段的收費</span> <button type="button"
                                class="btn btn-outline-primary btn-sm" @@click="room.addTimeSlot()"> 新增時段 </button>
                        </div>
                        <div class="time-slot-container">
                            <div v-for="(slot, index) in room.timeSlots" :key="slot.Id"
                                class="time-slot-item d-flex align-items-center gap-2"> <input v-model="slot.Enabled"
                                    type="checkbox"> <input v-model="slot.Name" class="form-control form-control-sm"
                                    placeholder="時段名稱" style="width:120px"> <input v-model="slot.StartTime" type="time"
                                    class="form-control form-control-sm" style="width:120px"> <span>-</span> <input
                                    v-model="slot.EndTime" type="time" class="form-control form-control-sm"
                                    style="width:120px">
                                <div class="input-group input-group-sm" style="width:150px"> <span
                                        class="input-group-text">$</span> <input v-model.number="slot.Price"
                                        type="number" class="form-control"> <span class="input-group-text">元</span>
                                </div> <button class="btn btn-outline-danger btn-sm"
                                    @@click="room.removeTimeSlot(index)"> 刪除 </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 媒體 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">會議室媒體</h6>

                    <div class="mb-3">
                        <label class="form-label">上傳圖片/影片</label>
                        <input type="file" class="form-control form-control-sm" accept="image/*,video/*" multiple
                            @@change="room.handleMediaUpload">
                    </div>

                    <div v-if="room.vm.Images && room.vm.Images.length > 0" class="mb-3">
                        <div
                            style="display: grid; grid-template-columns: repeat(auto-fill, minmax(80px, 1fr)); gap: 8px;">
                            <div v-for="(img, idx) in room.vm.Images" :key="idx"
                                style="position: relative; width: 80px; height: 80px; border-radius: 6px; overflow: hidden; background: #f0f0f0;">
                                <img v-if="img.Type === 'image'" :src="img.Src"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                                <button type="button" @@click="room.removeMedia(idx)"
                                    style="position: absolute; top: 2px; right: 2px; width: 20px; height: 20px; background: rgba(0,0,0,0.6); color: white; border: none; border-radius: 50%; font-size: 12px; cursor: pointer; padding: 0; line-height: 20px;">
                                    ×
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="background:#fff;border:1px solid #eee;border-radius:12px;padding:16px;margin-bottom:16px;">
                    <h6 style="margin:0 0 12px;font-weight:600;">租借權限設定</h6>

                    <div class="rental-options" style="display:grid;grid-template-columns:repeat(4,1fr);gap:12px;">
                        <!-- 對內 -->
                        <div @@click="room.vm.BookingSettings = 'in'"
                            style="border-radius:12px;padding:10px;text-align:center;cursor:pointer;" :style="{
        border: room.vm.BookingSettings === 'in'
          ? '2px solid #007bff'
          : '1px solid #e9ecef',
        background: room.vm.BookingSettings === 'in'
          ? '#f0f7ff'
          : '#fff'
      }">
                            <i class="bx bx-building" style="font-size:2em;color:#007bff;"></i>
                            <h6 class="mt-2">對內</h6>
                            <small class="text-muted">僅限公司內部使用</small>
                        </div>

                        <!-- 對內外 -->
                        <div @@click="room.vm.BookingSettings = 'out'"
                            style="border-radius:12px;padding:10px;text-align:center;cursor:pointer;" :style="{
        border: room.vm.BookingSettings === 'out'
          ? '2px solid #007bff'
          : '1px solid #e9ecef',
        background: room.vm.BookingSettings === 'out'
          ? '#f0f7ff'
          : '#fff'
      }">
                            <i class="bx bx-group" style="font-size:2em;color:#28a745;"></i>
                            <h6 class="mt-2">對內外</h6>
                            <small class="text-muted">內部及外部客戶可租借</small>
                        </div>

                        <!-- 不開放 -->
                        <div @@click="room.vm.BookingSettings = 'closed'"
                            style="border-radius:12px;padding:10px;text-align:center;cursor:pointer;" :style="{
        border: room.vm.BookingSettings === 'closed'
          ? '2px solid #007bff'
          : '1px solid #e9ecef',
        background: room.vm.BookingSettings === 'closed'
          ? '#f0f7ff'
          : '#fff'
      }">
                            <i class="bx bx-block" style="font-size:2em;color:#dc3545;"></i>
                            <h6 class="mt-2">不開放</h6>
                            <small class="text-muted">暫不開放租借</small>
                        </div>

                        <!-- 免費 -->
                        <div @@click="room.vm.BookingSettings = 'free'"
                            style="border-radius:12px;padding:10px;text-align:center;cursor:pointer;" :style="{
        border: room.vm.BookingSettings === 'free'
          ? '2px solid #007bff'
          : '1px solid #e9ecef',
        background: room.vm.BookingSettings === 'free'
          ? '#f0f7ff'
          : '#fff'
      }">
                            <i class="bx bx-gift" style="font-size:2em;color:#17a2b8;"></i>
                            <h6 class="mt-2">免費開放</h6>
                            <small class="text-muted">免費提供使用</small>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" @@click="room.save()">儲存變更</button>
            </div>
        </div>
    </div>
</div>