<!-- Views/Admin/_SysRoomEdit.cshtml -->
<div class="modal fade" id="roomEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <span class="material-icons">edit</span>編輯會議室
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body vstack gap-3">
                <!-- 基本資訊 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">基本資訊</h6>

                    <div class="mb-3">
                        <label class="form-label">會議室名稱 <span class="text-danger">*</span></label>
                        <input v-model="room.vm.Name" type="text" class="form-control form-control-sm">
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">大樓名稱 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Building" type="text" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">樓層 <span class="text-danger">*</span></label>
                            <select v-model="room.vm.Floor" class="form-select form-select-sm">
                                <option value="B2">B2 地下二樓</option>
                                <option value="B1">B1 地下一樓</option>
                                <option value="1">1樓</option>
                                <option value="2">2樓</option>
                                <option value="3">3樓</option>
                                <option value="4">4樓</option>
                                <option value="5">5樓</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-2 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">房間編號 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Number" type="text" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">使用狀態</label>
                            <select v-model="room.vm.Status" class="form-select form-select-sm">
                                <option value="available">可預約</option>
                                <option value="occupied">使用中</option>
                                <option value="maintenance">維修中</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 mt-2">
                        <label class="form-label">會議室說明</label>
                        <textarea v-model="room.vm.Description" class="form-control form-control-sm" rows="3"></textarea>
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">容量（人） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Capacity" type="number" class="form-control form-control-sm" min="1">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">面積（㎡） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Area" type="number" class="form-control form-control-sm" min="1" step="0.01">
                        </div>
                    </div>
                </div>

                <!-- 收費設定 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">收費設定</h6>

                    <div class="mb-3">
                        <label class="form-label">收費方式 <span class="text-danger">*</span></label>
                        <div class="form-check">
                            <input v-model="room.vm.PricingType" type="radio" class="form-check-input" 
                                   id="editHourly" value="hourly" @@change="room.generateHourlySlots">
                            <label class="form-check-label" for="editHourly">小時制</label>
                        </div>
                        <div class="form-check">
                            <input v-model="room.vm.PricingType" type="radio" class="form-check-input" 
                                   id="editPeriod" value="period">
                            <label class="form-check-label" for="editPeriod">時段制</label>
                        </div>
                    </div>

                    <!-- 小時制 -->
                    <div v-if="room.vm.PricingType === 'hourly'" class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span style="font-size: 13px; font-weight: 500;">設定每個時段的收費</span>
                            <div>
                                <button type="button" class="btn btn-outline-success btn-sm me-1" @@click="room.selectAllHours">全選</button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" @@click="room.deselectAllHours">全不選</button>
                            </div>
                        </div>
                        <div style="max-height: 250px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 5px; padding: 10px;">
                            <div v-for="(pricing, idx) in room.vm.PricingDetails" :key="idx" class="mb-2">
                                <div class="d-flex align-items-center gap-2">
                                    <input v-model="pricing.Enabled" type="checkbox" class="form-check-input" style="margin: 0;">
                                    <label style="flex: 1; margin: 0; font-size: 12px;">{{ pricing.Name }}</label>
                                    <div class="input-group input-group-sm" style="width: 100px;">
                                        <span class="input-group-text">$</span>
                                        <input v-model.number="pricing.Price" type="number" class="form-control form-control-sm" min="0">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 時段制 -->
                    <div v-if="room.vm.PricingType === 'period'" class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span style="font-size: 13px; font-weight: 500;">設定各個時段的收費</span>
                            <button type="button" class="btn btn-outline-primary btn-sm" @@click="room.addTimeSlot">
                                <span class="material-icons" style="font-size: 16px;">add</span>新增時段
                            </button>
                        </div>
                        <div style="max-height: 250px; overflow-y: auto;">
                            <div v-for="(pricing, idx) in room.vm.PricingDetails" :key="idx" 
                                 class="mb-2 p-2 bg-white border rounded" style="font-size: 12px;">
                                <div class="row g-2 mb-2">
                                    <div class="col-12">
                                        <input v-model="pricing.Name" type="text" class="form-control form-control-sm" placeholder="時段名稱">
                                    </div>
                                </div>
                                <div class="row g-2 align-items-end mb-2">
                                    <div class="col-5">
                                        <input v-model="pricing.StartTime" type="time" class="form-control form-control-sm">
                                    </div>
                                    <div class="col-2 text-center">-</div>
                                    <div class="col-5">
                                        <input v-model="pricing.EndTime" type="time" class="form-control form-control-sm">
                                    </div>
                                </div>
                                <div class="row g-2 align-items-end">
                                    <div class="col-8">
                                        <div class="input-group input-group-sm">
                                            <span class="input-group-text">$</span>
                                            <input v-model.number="pricing.Price" type="number" class="form-control form-control-sm" min="0">
                                            <span class="input-group-text">元</span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <button type="button" class="btn btn-outline-danger btn-sm w-100" @@click="room.removeTimeSlot(idx)">刪除</button>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <input v-model="pricing.Enabled" type="checkbox" class="form-check-input" style="margin: 0;">
                                    <label class="form-check-label ms-2" style="font-size: 12px;">開放</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 媒體 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">會議室媒體</h6>

                    <div class="mb-3">
                        <label class="form-label">上傳圖片/影片</label>
                        <input type="file" class="form-control form-control-sm" accept="image/*,video/*" multiple @@change="room.handleMediaUpload">
                    </div>

                    <div v-if="room.vm.Images.length > 0" class="mb-3">
                        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(80px, 1fr)); gap: 8px;">
                            <div v-for="(img, idx) in room.vm.Images" :key="idx" 
                                 style="position: relative; width: 80px; height: 80px; border-radius: 6px; overflow: hidden; background: #f0f0f0;">
                                <img v-if="img.Type === 'image'" :src="img.Src" style="width: 100%; height: 100%; object-fit: cover;">
                                <button type="button" @@click="room.removeImage(idx)"
                                        style="position: absolute; top: 2px; right: 2px; width: 20px; height: 20px; background: rgba(0,0,0,0.6); color: white; border: none; border-radius: 50%; font-size: 12px; cursor: pointer; padding: 0; line-height: 20px;">
                                    ×
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 租借權限 -->
                <div style="background: #f8f9fa; border-radius: 8px; padding: 15px;">
                    <h6 style="margin: 0 0 12px; font-weight: 600; color: #495057;">租借權限設定</h6>

                    <div class="vstack gap-2">
                        <label class="form-check">
                            <input v-model="room.vm.BookingSettings" type="radio" class="form-check-input" value="in">
                            <span class="form-check-label">對內</span>
                        </label>
                        <label class="form-check">
                            <input v-model="room.vm.BookingSettings" type="radio" class="form-check-input" value="out">
                            <span class="form-check-label">對內外</span>
                        </label>
                        <label class="form-check">
                            <input v-model="room.vm.BookingSettings" type="radio" class="form-check-input" value="closed">
                            <span class="form-check-label">不開放</span>
                        </label>
                        <label class="form-check">
                            <input v-model="room.vm.BookingSettings" type="radio" class="form-check-input" value="free">
                            <span class="form-check-label">免費開放</span>
                        </label>
                    </div>
                </div>

                <!-- 啟用狀態 -->
                <div class="form-check form-switch">
                    <input v-model="room.vm.IsEnabled" type="checkbox" class="form-check-input" id="editIsEnabled">
                    <label class="form-check-label" for="editIsEnabled">啟用此會議室</label>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" @@click="room.save()">儲存變更</button>
            </div>
        </div>
    </div>
</div>
