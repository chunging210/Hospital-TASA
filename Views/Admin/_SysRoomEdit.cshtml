
<div class="modal fade" id="roomEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <span class="material-icons">edit</span>編輯會議室
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body vstack gap-3">

                <!-- 基本資訊 -->
                <div class="edit-form-section">
                    <h6>基本資訊</h6>

                    <div class="mb-3">
                        <label class="form-label">會議室名稱 <span class="text-danger">*</span></label>
                        <input v-model="room.vm.Name" type="text" class="form-control form-control-sm">
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">大樓名稱 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Building" type="text" class="form-control form-control-sm">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">樓層 <span class="text-danger">*</span></label>
                            <select v-model="room.vm.Floor" class="form-select form-select-sm">
                                <option value="B2">B2 地下二樓</option>
                                <option value="B1">B1 地下一樓</option>
                                <option value="1">1樓</option>
                                <option value="2">2樓</option>
                                <option value="3">3樓</option>
                                <option value="4">4樓</option>
                                <option value="5">5樓</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-2 mt-2">
                        <div class="col-md-6">
                            <label class="form-label">使用狀態</label>
                            <select v-model.number="room.vm.Status" class="form-select form-select-sm">
                                <option value="0">可預約</option>
                                <option value="1">維修中</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3 mt-2">
                        <label class="form-label">會議室說明</label>
                        <textarea v-model="room.vm.Description" class="form-control form-control-sm"
                            rows="3"></textarea>
                    </div>

                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label">容量（人） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Capacity" type="number" class="form-control form-control-sm"
                                min="1">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">面積（㎡） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Area" type="number" class="form-control form-control-sm"
                                min="1" step="0.01">
                        </div>
                    </div>
                </div>

                <!-- 收費設定 -->
                <div class="edit-form-section">
                    <h6>收費設定</h6>

                    <!-- 啟用狀態 -->
                    <div class="form-check form-switch">
                        <input v-model="room.vm.IsEnabled" type="checkbox" class="form-check-input" id="editIsEnabled">
                        <label class="form-check-label" for="editIsEnabled">退費機制</label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">收費方式 <span class="text-danger">*</span></label>

                        <div class="form-check form-check-inline">
                            <input v-model.number="room.vm.PricingType" type="radio" id="editHourly" :value="0"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editHourly">小時制</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input v-model.number="room.vm.PricingType" type="radio" id="editPeriod" :value="1"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editPeriod">時段制</label>
                        </div>
                    </div>

                    <!-- 小時制設定 -->
                    <div v-if="room.vm.PricingType === 0" class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="pricing-control-bar">設定每個時段的收費</span>
                            <div>
                                <button type="button" class="btn btn-outline-success btn-sm"
                                    @@click="room.selectAllHours()">
                                    全選
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm ms-2"
                                    @@click="room.deselectAllHours()">
                                    全不選
                                </button>
                            </div>
                        </div>

                        <div class="hourly-pricing-container">
                            <div v-for="slot in room.hourlySlots.value" :key="slot.Hour" class="hourly-pricing-item">
                                <!-- 複選框 -->
                                <input v-model="slot.Checked" type="checkbox" class="form-check-input hourly-pricing-checkbox">

                                <!-- 時段標籤 -->
                                <label class="hourly-pricing-label">
                                    {{ String(slot.Hour).padStart(2, '0') }}:00 -
                                    {{ String(slot.Hour + 1).padStart(2, '0') }}:00
                                </label>

                                <!-- 價格輸入框 -->
                                <div class="input-group input-group-sm hourly-pricing-input">
                                    <span class="input-group-text">$</span>
                                    <input v-model.number="slot.Fee" type="number"
                                        class="form-control form-control-sm" min="0" :disabled="!slot.Checked"
                                        placeholder="500">
                                    <span class="input-group-text">元</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 時段制設定 -->
                    <div v-if="room.vm.PricingType === 1">
                        <div class="d-flex justify-content-between mb-2">
                            <span>設定各個時段的收費</span>
                            <button type="button" class="btn btn-outline-primary btn-sm" @@click="room.addTimeSlot()">
                                新增時段
                            </button>
                        </div>
                        <div class="period-pricing-container">
                            <div v-for="(slot, index) in room.timeSlots" :key="slot.Id" class="period-pricing-item">
                                <input v-model="slot.Enabled" type="checkbox" class="form-check-input">
                                <input v-model="slot.Name" class="form-control form-control-sm name-input"
                                    placeholder="時段名稱">
                                <input v-model="slot.StartTime" type="time" class="form-control form-control-sm time-input">
                                <span>-</span>
                                <input v-model="slot.EndTime" type="time" class="form-control form-control-sm time-input">
                                <div class="input-group input-group-sm price-input">
                                    <span class="input-group-text">$</span>
                                    <input v-model.number="slot.Price" type="number" class="form-control">
                                    <span class="input-group-text">元</span>
                                </div>
                                <button type="button" class="btn btn-outline-danger btn-sm remove-btn"
                                    @@click="room.removeTimeSlot(index)">
                                    刪除
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 媒體 -->
                <div class="edit-media-section">
                    <h6>會議室媒體</h6>

                    <input type="file" id="editMediaUpload" class="form-control form-control-sm media-upload-input"
                        accept="image/*,video/*" multiple @@change="room.handleMediaUpload">

                    <div v-if="room.mediaFiles.length > 0" class="edit-media-grid">
                        <div v-for="media in room.mediaFiles" :key="media.Id" class="edit-media-item">
                            <img v-if="media.type === 'image'" :src="media.src" alt="媒體預覽">
                            <button type="button" class="remove-btn" @@click="room.removeMedia(media.Id)">×</button>
                        </div>
                    </div>
                </div>

                <!-- 租借權限設定 -->
                <div class="edit-booking-section">
                    <h6>租借權限設定</h6>

                    <div class="edit-rental-options">
                        <!-- 對內 (InternalOnly = 0) -->
                        <div class="edit-rental-option edit-rental-option-internal"
                            @@click="room.vm.BookingSettings = 0"
                            :class="{ active: room.vm.BookingSettings === 0, inactive: room.vm.BookingSettings !== 0 }">
                            <i class="bx bx-building"></i>
                            <h6>對內</h6>
                            <small class="text-muted">僅限公司內部使用</small>
                        </div>

                        <!-- 對內外 (InternalAndExternal = 1) -->
                        <div class="edit-rental-option edit-rental-option-external"
                            @@click="room.vm.BookingSettings = 1"
                            :class="{ active: room.vm.BookingSettings === 1, inactive: room.vm.BookingSettings !== 1 }">
                            <i class="bx bx-group"></i>
                            <h6>對內外</h6>
                            <small class="text-muted">內部及外部客戶可租借</small>
                        </div>

                        <!-- 不開放 (Closed = 2) -->
                        <div class="edit-rental-option edit-rental-option-closed"
                            @@click="room.vm.BookingSettings = 2"
                            :class="{ active: room.vm.BookingSettings === 2, inactive: room.vm.BookingSettings !== 2 }">
                            <i class="bx bx-block"></i>
                            <h6>不開放</h6>
                            <small class="text-muted">暫不開放租借</small>
                        </div>

                        <!-- 免費 (Free = 3) -->
                        <div class="edit-rental-option edit-rental-option-free"
                            @@click="room.vm.BookingSettings = 3"
                            :class="{ active: room.vm.BookingSettings === 3, inactive: room.vm.BookingSettings !== 3 }">
                            <i class="bx bx-gift"></i>
                            <h6>免費開放</h6>
                            <small class="text-muted">免費提供使用</small>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" @@click="room.save()">儲存變更</button>
            </div>
        </div>
    </div>
</div>
