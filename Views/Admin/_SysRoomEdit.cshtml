<div class="modal fade" id="roomEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center gap-2">
                    <span class="material-icons">edit</span>編輯會議室
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body vstack gap-3">

                <!-- 基本資訊 -->
                <div class="edit-form-section">
                    <h6>基本資訊</h6>

                    <div class="mb-3">
                        <label class="form-label">會議室名稱 <span class="text-danger">*</span></label>
                        <input v-model="room.vm.Name" type="text" class="form-control form-control-sm">
                    </div>

                    <!-- ✅ 分院、大樓、樓層同一列 -->
                    <div class="row g-2">
                        <div class="col-md-4" v-if="isAdmin">
                            <label class="form-label">分院 <span class="text-danger">*</span></label>
                            <select v-model="room.vm.DepartmentId" class="form-select form-select-sm" required>
                                <option :value="null">請選擇</option>
                                <option v-for="dept in department.list" :key="dept.Id" :value="dept.Id">
                                    {{ dept.Name }}
                                </option>
                            </select>
                            <div class="invalid-feedback">請選擇分院</div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">大樓名稱 <span class="text-danger">*</span></label>
                            <input v-model="room.vm.Building" type="text" class="form-control form-control-sm">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">樓層 <span class="text-danger">*</span></label>
                            <input v-model.trim="room.vm.Floor" type="text" class="form-control form-control-sm"
                                placeholder="例：B1、1、RF" maxlength="4">
                        </div>
                    </div>


                    <!-- ✅ 說明單獨一列 -->
                    <div class="mb-3 mt-3">
                        <label class="form-label">會議室說明</label>
                        <textarea v-model="room.vm.Description" class="form-control form-control-sm"
                            rows="3"></textarea>
                    </div>

                    <!-- ✅ 容量、面積各佔一列 -->
                    <div class="row g-2">
                        <div class="col-md-5">
                            <label class="form-label">人數 <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Capacity" type="number" class="form-control form-control-sm"
                                min="1">
                        </div>
                        <div class="col-md-5">
                            <label class="form-label">面積（㎡） <span class="text-danger">*</span></label>
                            <input v-model.number="room.vm.Area" type="number" class="form-control form-control-sm"
                                min="1" step="0.01">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <div class="form-check mb-0">
                                <input v-model="room.vm.Status" :true-value="1" :false-value="0" type="checkbox"
                                    class="form-check-input" id="editStatus">
                                <label class="form-check-label" for="editStatus">
                                    維修中
                                </label>
                            </div>
                        </div>
                    </div>


                </div>

                <!-- 收費設定 -->
                <div class="edit-form-section">
                    <h6>收費設定</h6>

                    <div class="mb-3">
                        <label class="form-label d-block">收費方式 <span class="text-danger">*</span></label>

                        @* <div class="form-check form-check-inline">
                            <input v-model.number="room.vm.PricingType" type="radio" id="editHourly" :value="0"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editHourly">小時制</label>
                        </div> *@

                        <div class="form-check form-check-inline">
                            <input v-model.number="room.vm.PricingType" type="radio" id="editPeriod" :value="1"
                                @@change="room.onPricingTypeChange">
                            <label class="form-check-label" for="editPeriod">時段制</label>
                        </div>
                    </div>

                    <!-- 小時制設定 -->
                    @* <div v-if="room.vm.PricingType === 0" class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="pricing-control-bar">設定每個時段的收費</span>
                            <div>
                                <button type="button" class="btn btn-outline-success btn-sm"
                                    @@click="room.selectAllHours()">
                                    全選
                                </button>
                                <button type="button" class="btn btn-outline-danger btn-sm ms-2"
                                    @@click="room.deselectAllHours()">
                                    全不選
                                </button>
                            </div>
                        </div>

                        <div class="hourly-pricing-container">
                            <div v-for="slot in room.hourlySlots.value" :key="slot.Hour" class="hourly-pricing-item">
                                <!-- 複選框 -->
                                <input v-model="slot.Checked" type="checkbox"
                                    class="form-check-input hourly-pricing-checkbox">

                                <!-- 時段標籤 -->
                                <label class="hourly-pricing-label">
                                    {{ String(slot.Hour).padStart(2, '0') }}:00 -
                                    {{ String(slot.Hour + 1).padStart(2, '0') }}:00
                                </label>

                                <!-- 價格輸入框 -->
                                <div class="input-group input-group-sm hourly-pricing-input">
                                    <span class="input-group-text">$</span>
                                    <input v-model.number="slot.Fee" type="number" class="form-control form-control-sm"
                                        min="0" :disabled="!slot.Checked" placeholder="500">
                                    <span class="input-group-text">元</span>
                                </div>
                            </div>
                        </div>
                    </div> *@

                    <!-- 時段制設定 -->
                    <div v-if="room.vm.PricingType === 1">
                        <div class="d-flex justify-content-between mb-2">
                            <span>設定各個時段的收費</span>
                            <button type="button" class="btn btn-outline-primary btn-sm" @@click="room.addTimeSlot()">
                                新增時段
                            </button>
                        </div>
                        <div class="period-pricing-container">
                            <div v-for="(slot, index) in room.timeSlots" :key="slot.Id" class="period-pricing-item">
                                <input v-model="slot.Enabled" type="checkbox" class="form-check-input">
                                <input v-model="slot.Name" class="form-control form-control-sm name-input"
                                    placeholder="時段名稱">
                                <select v-model="slot.StartTime" class="form-select form-select-sm time-input">
                                    <option v-for="t in timeOptions" :key="t" :value="t">{{ t }}</option>
                                </select>
                                <span>-</span>
                                <select v-model="slot.EndTime" class="form-select form-select-sm time-input">
                                    <option v-for="t in timeOptions" :key="t" :value="t">{{ t }}</option>
                                </select>
                                <div class="input-group input-group-sm price-input">
                                    <span class="input-group-text">平日$</span>
                                    <input v-model.number="slot.Price" type="number" class="form-control">
                                </div>
                                <div class="input-group input-group-sm price-input">
                                    <span class="input-group-text">假日$</span>
                                    <input v-model.number="slot.HolidayPrice" type="number" class="form-control">
                                </div>
                                <button type="button" class="btn btn-outline-danger btn-sm remove-btn"
                                    @@click="room.removeTimeSlot(index)">
                                    刪除
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 媒體 -->
                <div class="edit-media-section">
                    <h6>會議室媒體</h6>

                    <input type="file" id="editMediaUpload" class="form-control form-control-sm media-upload-input"
                        accept="image/*,video/*" multiple @@change="room.handleMediaUpload">

                    <div v-if="room.mediaFiles.length > 0" class="edit-media-grid">
                        <div v-for="media in room.mediaFiles" :key="media.Id" class="edit-media-item">
                            <!-- 圖片 -->
                            <img v-if="media.type === 'image'" :src="media.src" alt="媒體預覽">

                            <!-- 影片（不管是 base64 還是路徑都能播放） -->
                            <video v-else controls
                                style="width: 100%; height: 100%; object-fit: cover; background: #000;">
                                <source :src="media.src" type="video/mp4">
                            </video>

                            <!-- 刪除按鈕 -->
                            <button type="button" class="remove-btn" @@click="room.removeMedia(media.Id)">×</button>
                        </div>
                    </div>
                </div>

                <!-- 租借權限設定 -->
                <div class="edit-booking-section">
                    <h6>租借權限設定</h6>

                    <div class="edit-rental-options">
                        <!-- 對內 (InternalOnly = 0) -->
                        <div class="edit-rental-option edit-rental-option-internal"
                            @@click="room.vm.BookingSettings = 0"
                            :class="{ active: room.vm.BookingSettings === 0, inactive: room.vm.BookingSettings !== 0 }">
                            <i class="bx bx-building"></i>
                            <h6>對內</h6>
                            <small class="text-muted">僅限公司內部使用</small>
                        </div>

                        <!-- 對內外 (InternalAndExternal = 1) -->
                        <div class="edit-rental-option edit-rental-option-external"
                            @@click="room.vm.BookingSettings = 1"
                            :class="{ active: room.vm.BookingSettings === 1, inactive: room.vm.BookingSettings !== 1 }">
                            <i class="bx bx-group"></i>
                            <h6>對內外</h6>
                            <small class="text-muted">內部及外部客戶可租借</small>
                        </div>

                        <!-- 不開放 (Closed = 2) -->
                        <div class="edit-rental-option edit-rental-option-closed" @@click="room.vm.BookingSettings = 2"
                            :class="{ active: room.vm.BookingSettings === 2, inactive: room.vm.BookingSettings !== 2 }">
                            <i class="bx bx-block"></i>
                            <h6>不開放</h6>
                            <small class="text-muted">暫不開放租借</small>
                        </div>

                        <!-- 免費 (Free = 3) -->
                        <div class="edit-rental-option edit-rental-option-free" @@click="room.vm.BookingSettings = 3"
                            :class="{ active: room.vm.BookingSettings === 3, inactive: room.vm.BookingSettings !== 3 }">
                            <i class="bx bx-gift"></i>
                            <h6>免費開放</h6>
                            <small class="text-muted">免費提供使用</small>
                        </div>
                    </div>
                </div>

                <!-- 會議室管理者 -->
                <div class="edit-form-section">
                    <h6>會議室管理者</h6>

                    <div class="mb-3">
                        <label class="form-label">指定管理者 (選填)</label>

                        <!-- 已選擇的管理者 -->
                        <div v-if="manager.selectedManager.value"
                            class="alert alert-info d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <i class="mdi mdi-account-check"></i>
                                <strong>{{ manager.selectedManager.value.Name }}</strong>
                                <!-- ✅ 角色標籤 -->
                                <span class="badge bg-white text-primary ms-2" style="font-size: 0.7rem;">
                                    {{ manager.selectedManager.value.RoleDisplay }}
                                </span>
                                <small class="text-muted ms-2">{{ manager.selectedManager.value.Email }}</small>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                @@click="manager.clearSelection()">
                                <i class="mdi mdi-close"></i> 取消
                            </button>
                        </div>

                        <!-- 搜尋管理者 -->
                        <div v-else>
                            <input v-model="manager.searchKeyword.value" type="text"
                                class="form-control form-control-sm mb-2" placeholder="搜尋使用者姓名或 Email...">

                            <div class="manager-list"
                                style="max-height: 180px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px;">
                                <div v-for="user in manager.filteredList.value" :key="user.Id" class="p-2 border-bottom"
                                    style="cursor: pointer; transition: background 0.2s;"
                                    @@click="manager.selectManager(user)"
                                    @@mouseover="$event.currentTarget.style.backgroundColor='#f8f9fa'"
                                    @@mouseout="$event.currentTarget.style.backgroundColor='white'">
                                    <div class="d-flex align-items-center">
                                        <i class="mdi mdi-account-circle me-2 text-primary"></i>
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-1">
                                                <strong style="font-size: 0.9rem;">{{ user.Name }}</strong>
                                                <!-- ✅ 角色標籤 -->
                                                <span class="badge bg-primary" style="font-size: 0.65rem;">
                                                    {{ user.RoleDisplay }}
                                                </span>
                                            </div>
                                            <small class="text-muted d-block">{{ user.Email }}</small>
                                            <small v-if="isAdmin && user.DepartmentName" class="text-muted">
                                                <i class="mdi mdi-domain"></i> {{ user.DepartmentName }}
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div v-if="manager.filteredList.value.length === 0" class="p-3 text-center text-muted">
                                    <i class="mdi mdi-account-search"></i> 查無使用者
                                </div>
                            </div>
                        </div>

                        <div class="form-text text-muted mt-2">
                            <i class="mdi mdi-information-outline"></i> 預約審核通知將寄給指定管理者
                        </div>
                    </div>
                </div>

                <!-- ✅ 聲明書設定 -->
                <div class="edit-form-section">
                    <h6>聲明書設定</h6>
                    <div class="mb-3">
                        <label class="form-label">上傳自訂聲明書 (PDF)</label>

                        <!-- 目前已有的聲明書 -->
                        <div v-if="room.vm.AgreementPath && !form.agreementFileName" class="alert alert-info py-2 mb-2">
                            <i class="mdi mdi-file-pdf-box text-danger"></i>
                            目前聲明書：
                            <a :href="room.vm.AgreementPath" target="_blank" class="ms-1">查看</a>
                            <button type="button" class="btn btn-sm btn-link text-danger p-0 ms-2"
                                    @@click="room.removeExistingAgreement()">移除</button>
                        </div>

                        <input type="file" class="form-control form-control-sm" accept=".pdf"
                               @@change="room.handleAgreementUpload($event)">
                        <div class="form-text text-muted">
                            <i class="mdi mdi-information-outline"></i> 若未上傳，將使用系統預設聲明書
                        </div>

                        <!-- 新上傳的檔案 -->
                        <div v-if="form.agreementFileName" class="alert alert-success mt-2 py-2">
                            <i class="mdi mdi-file-pdf-box text-danger"></i>
                            已選擇新檔案：{{ form.agreementFileName }}
                            <button type="button" class="btn btn-sm btn-link text-danger p-0 ms-2"
                                    @@click="room.clearAgreement()">移除</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" @@click="room.save()">儲存變更</button>
            </div>
        </div>
    </div>
</div>