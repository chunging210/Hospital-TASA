<!--calendar-->
<div class="page-content">
    <div class="container-fluid vstack gap-3">
        <div class="row">
            <div class="col-12 col-xl-3">
                <div class="card card-h-100">
                    <div class="card-body p-0">
                        <div class="user-profile-img">
                            <img src="/images/auth/bg-auth.png" class="profile-img profile-foreground-img rounded-top" style="height: 120px;" alt="bg">
                        </div>
                        <div class="mt-n5 position-relative">
                            <div class="text-center">
                                <img src="/images/avatar.jpg" class="avatar-xl rounded-circle img-thumbnail" alt="avatar">
                                <div class="mt-3">
                                    <h5 class="mb-1">{{me.vm.DepartmentName}} {{me.vm.Name}}</h5>
                                </div>
                            </div>
                        </div>
                        <div class="p-3">
                            <hr class="mb-4">
                            <h5 class="card-title mb-3">查詢會議日程</h5>
                            <div class="mb-3">
                                <v-select v-model="calendar.query.localtion" :multiple="true" :options="room.list.map(x=>x.Name)" placeholder="與會地點">
                                    <template #no-options="{ search, searching, loading }">
                                        沒有可供選擇的選項。
                                    </template>
                                </v-select>
                            </div>
                            <div class="mb-3">
                                <v-select v-model="calendar.query.user" :multiple="true" :options="user.list.map(x=>x.Name)" placeholder="與會人員">
                                    <template #no-options="{ search, searching, loading }">
                                        沒有可供選擇的選項。
                                    </template>
                                </v-select>
                            </div>
                            <div class="mb-3">
                                <v-select v-model="calendar.query.department" :multiple="true" :options="department.list.map(x=>x.Name)" placeholder="承辦單位">
                                    <template #no-options="{ search, searching, loading }">
                                        沒有可供選擇的選項。
                                    </template>
                                </v-select>
                            </div>
                            <div class="mb-3">
                                <input v-model="calendar.query.keyword" type="text" class="form-control" placeholder="關鍵字">
                            </div>
                            <hr class="mb-4">
                            <div class="px-4 mx-n3">
                                <h5 class="card-title mb-3 mt-2">近期活動</h5>
                                <ul class="list-unstyled vstack gap-3 mb-0">
                                    <li v-for="item in recent.list">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-shrink-0 me-3">
                                                <div :class="['avatar-md','h-auto','p1','py-2','rounded',{'bg-primary':!item.Self},{'bg-danger':item.Self}]">
                                                    <div class="text-center">
                                                        <h5 class="mb-0 text-white">{{item.StartTime.format('mm/dd')}}</h5>
                                                        <div class="text-white">{{item.StartTime.format('HH:MM')}}</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 pt-2 text-muted">
                                                <p class="mb-0">{{item.Name}}</p>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="text-center">
                                        <a href="/conference" class="btn btn-link w-100-none">More</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xl-9">
                <div class="card">
                    <div class="card-body">
                        <div ref="calendarfc"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_View" />

@{
    ViewBag.IsTemplate = false;
}
<partial name="~/Views/Conference/_Edit.cshtml" />